<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReviewFormActivity"
        android:background="#808080"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView

                android:id="@+id/Review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Review Form"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:background="#33656565"
                android:drawablePadding="10dp"
                android:hint="Beach Name"
                android:minHeight="58dp"
                android:padding="10dp"
                android:textColorHint="#616161" />

            <MultiAutoCompleteTextView
                android:id="@+id/multiAutoCompleteTextView"
                android:layout_width="360dp"
                android:layout_height="60sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:hint="Review" />

            <TextView
                android:id="@+id/ratingView"
                android:layout_width="360dp"
                android:layout_height="45sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:text="Rating? (Out of 5)"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_marginLeft="0sp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="65sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="360dp"
                android:layout_height="45sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:text="Would you recommend to a friend?"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="360dp"
                android:layout_height="30sp"
                android:text="Yes" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="360dp"
                android:layout_height="30sp"
                android:text="No" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="360dp"
                android:layout_height="30sp"
                android:text="Maybe" />

            <com.google.android.material.button.MaterialButton

                android:id="@+id/button_submit"
                android:layout_width="175dp"
                android:layout_height="64dp"
                android:layout_marginTop="25dp"
                android:letterSpacing="0"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="25dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

